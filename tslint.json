{
  "extends": ["tslint:recommended", "tslint-react"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-var-requires": [false],
    "no-console": [false],
    "arrow-parens": [false],
    "quotemark": [true, "single", "avoid-escape"],
    "interface-name": [false]
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}

